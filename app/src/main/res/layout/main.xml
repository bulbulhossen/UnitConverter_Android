<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background1"
    android:orientation="vertical"
    android:textAlignment="center">


    />

    <TextView
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/title"
        android:gravity="center_horizontal"
        android:text="Unit Converter"
        android:textColor="#F6EBBC"
        android:textSize="25sp"

        android:textStyle="bold" />

    <LinearLayout

        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Type"
            android:textColor="#008A00"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <Spinner
            android:textColor="@android:color/white"
            android:id="@+id/SpinnerUnit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18sp"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Value"
            android:textColor="#008A00"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <me.james.biuedittext.BiuEditText
            android:padding="10dp"
            android:background="@drawable/rectangle"
            android:id="@+id/EditTextValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Enter input value"
            android:inputType="number"
            android:text=""
            android:textSize="18sp"></me.james.biuedittext.BiuEditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewFrom"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="From"
            android:textColor="#008A00"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <Spinner
            android:id="@+id/SpinnerFrom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewTo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="To"
            android:textColor="#008A00"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <Spinner
            android:id="@+id/SpinnerTo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"></Spinner>
    </LinearLayout>

    <Button

        android:id="@+id/Button01"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbackground"
        android:ems="12"
        android:text="Convert"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textCursorDrawable="@android:color/holo_green_dark"
        android:textStyle="bold"></Button>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView

            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/TextViewString"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:text="Result"
            android:textColor="#889221"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <EditText

            android:background="@drawable/textbackground"
            android:padding="10dp"
            android:id="@+id/TextViewResult"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:textSize="18sp"></EditText>
    </LinearLayout>


</LinearLayout>
